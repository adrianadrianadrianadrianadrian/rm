#!/bin/bash

gcc -o compiler \
    main.c \
    lexer.c \
    utils.c \
    parser.c \
    lowering/c.c \
    error.c \
    context.c \
    type_checker.c \
    type_inference.c \
    -lm \
    -D DEBUG_CONTEXT \
    && mkdir -p target \
    && time ./compiler "$1" \
    && cd target \
    && gcc -o bin c_output.c
